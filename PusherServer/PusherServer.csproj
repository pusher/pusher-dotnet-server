    -->
    <None Include="..\PusherServer.Core\bin\$(Configuration)\netstandard1.3\PusherServer.Core.dll" Link="Properties\PusherServer.Core.dll" Pack="true" PackagePath="lib\netStandard1.3\PusherServer.Core.dll" />
  </ItemGroup>

</Project>
